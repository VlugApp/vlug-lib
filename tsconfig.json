{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib/esm",
    "rootDir": "./src",
    "composite": true,
    // "paths": {
    //   "@/helpers/*": ["./src/helpers/*"],
    //   "@/routes/*": ["./src/routes/*"],
    //   "@/types/*": ["./src/types/*"]
    // },
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
