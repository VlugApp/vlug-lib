{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "allowUnreachableCode": false,
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "composite": true,
    // "paths": {
    //   "@/helpers/*": ["./src/helpers/*"],
    //   "@/routes/*": ["./src/routes/*"],
    //   "@/types/*": ["./src/types/*"]
    // },
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
